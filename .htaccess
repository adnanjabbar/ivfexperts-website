RewriteEngine On
RewriteBase /

# Route sitemap.xml to the dynamic PHP generator
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Remove .php extension from URLs (if the file exists)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.php [NC,L]

